# Replace them with new keys and store them securely.
OPENAI_API_KEY="your_new_openai_api_key"
MOONSHOT_API_KEY="your_new_moonshot_api_key"

# Concurrency settings
MAX_CONCURRENT=20

# Celery / Redis settings
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# --- Whisper.cpp settings ---
WHISPER_CLI_PATH=/usr/local/bin/whisper
WHISPER_MODEL_PATH=/app/whisper.cpp/models/ggml-tiny.en-q8_0.bin  # small default

# Performance
WHISPER_THREADS=1
WHISPER_BATCH_SIZE=20

# Language
WHISPER_LANGUAGE=en
WHISPER_TRANSLATE=false

# Formatting
WHISPER_SPLIT_ON_WORD=true
WHISPER_MAX_LEN=100
WHISPER_BEST_OF=2
WHISPER_BEAM_SIZE=2

USE_BROWSER_COOKIES=true
BROWSER_NAME=edge

# Celery Beat schedule control
COOKIE_REFRESH_HOURS=12

REDIS_URL=redis://redis:6379/0
